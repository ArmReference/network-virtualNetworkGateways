{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "name": {
      "type": "string",
      "allowedValues": [
        "Basic",
        "ErGw1AZ",
        "ErGw2AZ",
        "ErGw3AZ",
        "HighPerformance",
        "Standard",
        "UltraPerformance",
        "VpnGw1",
        "VpnGw1AZ",
        "VpnGw2",
        "VpnGw2AZ",
        "VpnGw3",
        "VpnGw3AZ",
        "VpnGw4",
        "VpnGw4AZ",
        "VpnGw5",
        "VpnGw5AZ"
      ],
      "metadata": {
        "description": "Gateway SKU name."
      }
    },
    "tier": {
      "type": "string",
      "allowedValues": [
        "Basic",
        "ErGw1AZ",
        "ErGw2AZ",
        "ErGw3AZ",
        "HighPerformance",
        "Standard",
        "UltraPerformance",
        "VpnGw1",
        "VpnGw1AZ",
        "VpnGw2",
        "VpnGw2AZ",
        "VpnGw3",
        "VpnGw3AZ",
        "VpnGw4",
        "VpnGw4AZ",
        "VpnGw5",
        "VpnGw5AZ"
      ],
      "metadata": {
        "description": "Gateway SKU tier."
      }
    },
    "capactiy": {
      "type": "int",
      "defaultValue": 0,
      "metadata": {
        "description": "The capacity."
      }
    }
  },
  "variables": {
    "skus": [
      {
        "name": "[parameters('name')]",
        "tier": "[parameters('tier')]",
        "capacity": "[parameters('capactiy')]"
      },
      {
        "name": "[parameters('name')]",
        "tier": "[parameters('tier')]"
      }
    ],
    "virtualNetworkGatewaySku": "[if(equals(parameters('capactiy'),0),variables('skus')[1],variables('skus')[0])]"
  },
  "resources": [
  ],
  "outputs": {
    "virtualNetworkGatewaySku": {
      "type": "object",
      "value": "[variables('virtualNetworkGatewaySku')]",
      "metadata": {
        "description": "VirtualNetworkGatewaySku details."
      }
    }
  }
}