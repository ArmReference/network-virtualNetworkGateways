{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "asn": {
      "type": "int",
      "defaultValue": 0,
      "metadata": {
        "description": "The BGP speaker's ASN."
      }
    },
    "bgpPeeringAddress": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "The BGP peering address and BGP identifier of this BGP speaker."
      }
    },
    "bgpPeeringAddresses": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "BGP peering address with IP configuration ID for virtual network gateway."
      }
    },
    "peerWeight": {
      "type": "int",
      "defaultValue": 0,
      "metadata": {
        "description": "The weight added to routes learned from this BGP speaker."
      }
    }
  },
  "variables": {
    "bgpSettings": {
      "asn": "[parameters('asn')]",
      "bgpPeeringAddress": "[parameters('bgpPeeringAddress')]",
      "bgpPeeringAddresses": "[parameters('bgpPeeringAddresses')]",
      "peerWeight": "[parameters('peerWeight')]"
    }
  },
  "resources": [
  ],
  "outputs": {
    "bgpSettings": {
      "type": "object",
      "value": "[variables('bgpSettings')]",
      "metadata": {
        "description": "Virtual network gateway's BGP speaker settings."
      }
    }
  }
}